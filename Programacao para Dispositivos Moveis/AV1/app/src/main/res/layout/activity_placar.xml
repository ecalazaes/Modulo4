<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FF4CAF50">

    <TextView
        android:id="@+id/tvTituloPlacar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLACAR:"
        android:textSize="24sp"
        android:textColor="#800080"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvJogador1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador1"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvPlacarJogador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvJogador2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador2"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvPlacarJogador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvEmpatesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empates"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvEmpates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnRetornar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retornar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#800080"/>
</LinearLayout>
